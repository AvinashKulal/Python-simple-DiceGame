<VerificationWindow>:
    name:'verify'
    capture:capture
    error_text:error_text
    entered_capture:entered_otp
    FloatLayout:
        cols:1
        FloatLayout:
            Label:
                text:'ROLL DICE '
                font_size:33
                color:1,0,0,1
                pos_hint:{'x':0.26,'top':1.1}
                size_hint:0.5,0.5
            Label:
                text:'Are you HumanBeing ? Enter the Capture'
                id:error_text
                font_size:25
                color:1,1,0,1
                pos_hint:{'top':1.1}
            Label:
                id:capture
                font_size:25
                color:1,1,1,1
                pos_hint:{'top':1}
            TextInput:
                id:entered_otp
                size_hint:0.4,0.1
                font_size:30
                multiline:False
                pos_hint:{'x':0.3,'top':0.4}
        Button:
            text:'VERIFY'
            color:1,1,0,1
            font_size:20
            size_hint:0.3,0.14
            pos_hint:{'x':0.35,'top':0.26}
            on_release:
                root.verify_capture()

<GameWindow>:
    name:'game'
    player_score:ps
    computer_score:cs
    dice_score:ds
    button_text:bt
    attempt_left:atm
    FloatLayout:
        col:2
        Label:
            text:'PLAYER 1 : USER'
            pos_hint:{'x':-0.3,'top':1.4}
            font_size:25
            color:1,1,0,1
        Label:
            pos_hint:{'x':-0.3,'top':1}
            font_size:25
            id:ps
            color:1,1,1,1
        Label:
            text:'PLAYER 2 : COMPUTER '
            pos_hint:{'x':0.3,'top':1.4}
            font_size:25
            color:1,1,0,1
        Label:
            pos_hint:{'x':0.3,'top':1}
            id:cs
            font_size:25
            color:1,1,1,1
        Label:
            id:ds
            font_size:50
            color:0,1,1,1
        Label:

            id:atm
            pos_hint:{'top':1.3}
            font_size:25
            color:0,1,0,1
        Button:
            size_hint:0.4,0.2
            pos_hint:{'x':0.3,'top':0.3}
            font_size:25
            id:bt
            color:1,1,0,1
            on_release:
                root.roll_dice()
